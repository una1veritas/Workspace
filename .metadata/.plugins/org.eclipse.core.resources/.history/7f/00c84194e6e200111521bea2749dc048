				sprintf(p, "%c ", s[i]);
			else
				sprintf(p, "\\x%02x ", s[i]);
			p += 3;
		}
		return sbuf;
	}

	const char * printHex(const word * a, const int length) {
		char * p = sbuf;
		for (int i = 0; i < length; i++) {
			sprintf(p, "%04X ", a[i]);
			p += 5;
		}
