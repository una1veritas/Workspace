#include <stdio.h>
#include "main.h"
#include <Print.h>

size_t printByteHex(Print & prn, uint8_t b) {
	prn.print(b>>4 & 0x0f, HEX);
	prn.print(b & 0x0f, HEX);
	return 2;
}

size_t printHexString(Print & pr, uint8_t * a, int n) {
	size_t i;
    for(i = 0; i < n; i++) {
    	printByteHex(prn, a[i]);
    	pr.print(' ');
    }
    return i*3;
}

size_t printTimestampString(Ptint & prn, uint32_t time, uint32_t date) {
	printByteHex(prn, time>>16 & 0xff);
	prn.print(':');
	printByteHex(prn, time>>8 & 0xff);
	prn.print(':');
	printByteHex(prn, time & 0xff);
	prn.print('-');
	printByteHex(prn, date>>16 & 0xff);
	printByteHex(prn, date>>8 & 0xff);
	printByteHex(prn, date & 0xff);
}
