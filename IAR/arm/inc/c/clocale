#ifndef _CLOCALE_
#define _CLOCALE_

#ifndef _SYSTEM_BUILD
  #pragma system_include
#endif

#include <ycheck.h>
#include <yvals.h>
#ifndef _NO_LOCALE

  #ifdef _STD_USING
    #undef _STD_USING
    #include <locale.h>
    #define _STD_USING
  #else /* _STD_USING */
    #include <locale.h>
  #endif /* _STD_USING */

  #ifdef _GLOBAL_USING
    _STD_BEGIN
    using _CSTD lconv; using _CSTD localeconv; 
    #if _DLIB_FULL_LOCALE_SUPPORT
      using _CSTD setlocale;
    #endif
    _STD_END
  #endif /* _GLOBAL_USING */
#endif /* _NO_LOCALE */
#endif /* _CLOCALE_ */

