	.include "supermez80_asm.inc"
;
;	start of zero page
;
;	Note: The condition bits are not affected by OUT, NOP, JP and JR instructions
;
	ORG	0		; reset vector
CLEANUP_START:
TGTINV_GATE:
	OUT (MON_ENTER),A
	JR EXIT
RESTORE_SP:
	LD SP,0000h		; restore original SP

	DEFS	0008H - $, 0	; NOP
	ORG	0008H		; RST 08H interrupt vector
	OUT	(MON_CLEANUP),A
	NOP
	EI			; will be replaced by mon_cleanup()
	RETI			; will be replaced by mon_cleanup()

EXIT:
	; Set the origial SP
	LD	HL,(SAVED_SP)
	LD	SP,RESTORE_SP+3
	PUSH	HL

	; update return address
	INC	HL
	INC	HL
	LD	SP,HL
	LD	HL,(SAVED_PC)
	PUSH	HL

	; restore registers
	LD	SP,SAVED_IY
	POP	IY
	POP	IX
	POP	HL
	POP	DE
	POP	BC
	POP	AF
	JR	RESTORE_SP

;
;	work area
;	the structure of this area must be identical to struct trampoline_work_s in monitor.c
SAVED_IY:
	DEFW	0
SAVED_IX:
	DEFW	0
SAVED_HL:
	DEFW	0
SAVED_DE:
	DEFW	0
SAVED_BC:
	DEFW	0
SAVED_AF:
	DEFW	0
INT_STACK:
FAKE_RET_ADDR:
	DEFW	RESTORE_SP
SAVED_PC:
	DEFW	0
SAVED_SP:
	DEFW	0
CLEANUP_CODE_LOCATION:
	DEFW	0
NMI_FLAG:
	DEFB	0
WORK_RFU:
	DEFB	0

	END
