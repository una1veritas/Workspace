	ORG	0000h
TGTINV_GATE:
	OUT (TGTINV_TRAP),A
        JR ENTRY

	ORG	0004h
PARAMS:
SRC_ADDR:
	DEFW	0000h		; source address
DEST_ADDR:
	DEFW	0000h		; destination address
LENGTH:
	DEFB	00h		; number of bytes to copy

;
;	DMA helper entry
;
ENTRY:
	LD	HL,(SRC_ADDR)
	LD	DE,(DEST_ADDR)
	LD	A,(LENGTH)
	LD	C,A
	XOR	A
	LD	B,A
	LDIR			; transfer (HL) to (DE), inc HL and DE, dec BC and repeat while 0 < BC

	LD	A,0		; return value
	JR	TGTINV_GATE
;
	END
